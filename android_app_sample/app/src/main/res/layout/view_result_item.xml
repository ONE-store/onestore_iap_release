<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rank"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:text="4th"
        android:layout_marginLeft="8dp"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <com.gaa.iap.sample.widget.BallView
        android:id="@+id/ball1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:ballStyle="result"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rank"/>

    <com.gaa.iap.sample.widget.BallView
        android:id="@+id/ball2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:ballStyle="result"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ball1"/>

    <com.gaa.iap.sample.widget.BallView
        android:id="@+id/ball3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:ballStyle="result"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ball2"/>

    <com.gaa.iap.sample.widget.BallView
        android:id="@+id/ball4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:ballStyle="result"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ball3"/>

    <com.gaa.iap.sample.widget.BallView
        android:id="@+id/ball5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:ballStyle="result"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ball4"/>

    <com.gaa.iap.sample.widget.BallView
        android:id="@+id/ball6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:ballStyle="result"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ball5"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bonus"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>